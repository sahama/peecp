<!DOCTYPE html>
<html lang="{{ request.locale_name }}">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="peecp (peereesook control panel)">
    <meta name="author" content="peereesook team">
    <link rel="shortcut icon" href="{{ request.static_url('peecp:static/peereesook_96x96.png') }}">
    <link rel="shortcut icon" href="{{ request.static_url('peecp:static/peereesook_96x96.png') }}">
    <link rel="stylesheet" type="text/css" href="{{ request.static_url('peecp:static/theme.css') }}">

    <title>{{ _('PEECP_SITE_TITLE') }}</title>
</head>
<body>
<style>
    body {
        padding-top: 50px;
    }
</style>

<nav class="navbar navbar-inverse navbar-fixed-top">
    <div class="container">
        <div class="navbar-header">
            <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar"
                    aria-expanded="false" aria-controls="navbar">
                <span class="sr-only">Toggle navigation</span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>

            <a class="navbar-brand" rel="home" href="{{ request.route_path('home') }}"
               title="{{ _('PEECP_SITE_TITLE') }}">
                <img style="max-width:40px; margin-top: -7px;"
                     src="{{ request.static_url('peecp:static/peereesook_96x96.png') }}">
            </a>
        </div>
        <div id="navbar" class="collapse navbar-collapse">
            <ul class="nav navbar-nav">
                <li class="active"><a href="{{ request.route_path('home') }}">{{ _('PEECP_VIEW_HOME_TITLE') }}</a></li>
                <li><a href="{{ request.route_path('home') }}">{{ _('PEECP_VIEW_ABOUT_TITLE') }}</a></li>
                <li><a href="{{ request.route_path('home') }}">{{ _('PEECP_VIEW_CONTACT_TITLE') }}</a></li>
                <li><a href="{{ request.route_path('locale') }}?language=fa">{{ _('PEECP_VIEW_I18N_FA') }}</a></li>
                <li><a href="{{ request.route_path('locale') }}?language=en">{{ _('PEECP_VIEW_I18N_EN') }}</a></li>
            </ul>
        </div><!--/.nav-collapse -->
    </div>
</nav>

<div class="container">
    {% if user %}
        {{ _('PEECP_HELLO_USER') }}{{ user }} <a href="{{ request.route_url('logout') }}">{{ _('PEECP_LOGOUT') }}</a>
        <a href="{{ request.route_url('change_password') }}">{{ _('PEECP_CHANGE_PASSWORD') }}</a>
    {% else %}
        <a href="{{ request.route_url('login') }}">{{ _('PEECP_LOGIN') }}</a>
    {% endif %}

    {{ flash_messages }}


    {% block content %}
        <p>{{ _('PEECP_NO_CONTENT') }}</p>
    {% endblock content %}

</div><!-- /.container -->
{{ panel('footer') }}


</body>
</html>
